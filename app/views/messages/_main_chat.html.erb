<div class="chat-header">
  <div class="room-title">
    <%= @room.name %>
  </div>
  <div class="chat-delete-btn">
    <a href="#">チャットを終了する</a>
  </div>
</div>
<div class="messages">
  <ul class="message-index">
    <li class="message-list">
        <div class="message-details">
          <div class="message-name">Tom</div>
          <div class="message-created-at">2020/10/07(wed) 12:43:30</div>
        </div>
        <div class="message-content">Hello World.</div>
    </li>
    <li class="message-list">
        <div class="message-details">
          <div class="message-name">Lisa</div>
          <div class="message-created-at">2020/10/07(wed) 12:45:30</div>
        </div>
        <div class="message-content">VEAH.</div>
    </li>
  </ul>
</div>
<div class="chat-footer">
  <%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
    <div class="form-input">
      <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
      <label class="form-image">
        <span class="image-file">画像</span>
        <%= f.file_field :image, class: 'hidden' %>
      </label>
    </div>
    <%= f.submit '送信', class: 'form-submit' %>
  <% end %>
</div>